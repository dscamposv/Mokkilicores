@model Mokkilicores.Models.MkLogin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <form asp-controller="Access" asp-action="Login" method="post">
        <h1>Login</h1>
        <input type="text" placeholder="User" asp-for="User" />
        <input type="password" placeholder="Password" asp-for="Password" />

        <label>
            <input type="checkbox" asp-for="KeepLoggedIn" />
            Mantener la sesión activa
        </label>

        <button type="submit">Login</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }
    </form>
</body>
</html>