@model IEnumerable<Mokkilicores.Models.Cliente>

@{
    ViewData["Title"] = "ListaCliente";
}

<h1>ListaCliente</h1>

<p>
    <a asp-action="NuevoCliente">Agregar nuevo cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provincia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Canton)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distrito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompraSemestral)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompraAnual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompraTotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provincia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Canton)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distrito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompraSemestral)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompraAnual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompraTotal)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditaCliente", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "EliminaCliente", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
