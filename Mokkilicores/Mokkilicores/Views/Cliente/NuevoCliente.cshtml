@model Mokkilicores.Models.Cliente


@{
    ViewData["Title"] = "NuevoCliente";
}

<h1>Agregar nuevo cliente</h1>
<meta charset="utf-8" />
<h4>Ingrese los datos del cliente que desea registrar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="formularioCliente" asp-action="NuevoCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="margin-top: 20px;" class="form-group">
                <label asp-for="Id" class="control-label">Identificación</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div style="margin-top: 20px;" class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div style="margin-top: 20px;" class="form-group">
                <label asp-for="Apellidos" class="control-label">Apellidos</label>
                <input asp-for="Apellidos" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div style="margin-top: 20px;" class="form-group">
                <label asp-for="Provincia" class="control-label">Provincia</label>
                <input asp-for="Provincia" class="form-control" />
                <span asp-validation-for="Provincia" class="text-danger"></span>
            </div>
            <div style="margin-top: 20px;" class="form-group">
                <label asp-for="Canton" class="control-label">Cantón</label>
                <input asp-for="Canton" class="form-control" />
                <span asp-validation-for="Canton" class="text-danger"></span>
            </div>
            <div style="margin-top: 20px;" class="form-group">
                <label asp-for="Distrito" class="control-label">Distrito</label>
                <input asp-for="Distrito" class="form-control" />
                <span asp-validation-for="Distrito" class="text-danger"></span>
            </div>
            <div style="margin-top: 20px;" class="form-group">
                <input type="submit" value="Guardar cliente" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div style="margin-top: 20px;">
    <a asp-action="ListaCliente">Lista de clientes</a>
</div>

<div style="margin-top: 20px;">
    <a asp-controller="Home" asp-action="Index">Ir al inicio</a>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            var mensajes = $(".text-danger").text();
            if (mensajes) {
                alert(mensajes);
            }

           // var mensajeExito = "@ViewBag.MensajeExito";
            var mensajeExito = "@Html.Raw(ViewBag.MensajeExito)";
            if (mensajeExito) {
                alert(mensajeExito);
            }
        });
    </script>
}
